<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LocalHomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/grey_200"
        android:text="@string/sModo_Fuera_Linea"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_marginBottom="2dp"/>


    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.80"
        android:background="@color/grey_200"
        android:divider="@color/blue_grey_200"
        android:dividerHeight="1dp"
        android:scrollbars="vertical" >

    </ListView>

    <Button
        android:id="@+id/btnReconectar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/accent"
        android:backgroundTint="#3F51B5"
        android:text="@string/sReconectar"
        android:textColor="#FCFBFB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LLNo_data"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="@string/sNo_hay_Marcas"
            android:textAlignment="center"
            android:textSize="24sp" />



    </LinearLayout>



</LinearLayout>

